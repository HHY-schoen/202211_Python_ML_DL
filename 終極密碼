        "your_min = 1\n",
        "your_max = 100\n",
        "\n",
        "while(True):\n",
        "    tip = '請輸入 %s ~ %s的數字' %(your_min, your_max)\n",
        "    print(tip)\n",
        "    your_num = input('')\n",
        "    your_num = int(your_num)\n",
        "    if your_num>target:\n",
        "        print('太大，猜小一點')\n",
        "        your_max = your_num\n",
        "    elif your_num<target:\n",
        "        print('太小，猜大一點')\n",
        "        your_min = your_num\n",
        "    else:\n",
